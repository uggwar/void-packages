# Template file for 'libmpdclient'
pkgname=libmpdclient
version=2.23
revision=1
build_style=meson
short_desc="Asynchronous API library for interfacing MPD"
maintainer="Orphaned <orphan@voidlinux.org>"
license="BSD-2-Clause, BSD-3-Clause"
homepage="https://www.musicpd.org/libs/libmpdclient/"
distfiles="https://www.musicpd.org/download/libmpdclient/${version%.*}/libmpdclient-${version}.tar.xz"
checksum=4a1b6c7f783d8cac3d3b8e4cbe9ad021c45491e383de3b893ea4eedefbc71607

post_install() {
	vlicense LICENSES/BSD-2-Clause.txt
	vlicense LICENSES/BSD-3-Clause.txt
}

libmpdclient-devel_package() {
	short_desc+=" - development files"
	depends="${sourcepkg}>=${version}_${revision}"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/pkgconfig
		vmove "usr/lib/*.so"
	}
}
